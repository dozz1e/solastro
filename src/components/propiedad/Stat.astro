---
import {
  BedDouble,
  Bath,
  RulerDimensionLine,
  Car,
  Archive,
} from "@lucide/astro";
const { datos } = Astro.props;
---

<div class="stats shadow hidden lg:inline-grid bg-zinc-800 rounded-md w-full">
  {
    datos.areaTotal && (
      <div class="stat px-2 py-4">
        <div class="flex justify-center items-center gap-2">
          <div class="stat-value text-white text-xl">{datos.areaTotal}</div>
          <div class="stat-figure text-secondary">
            <RulerDimensionLine color="red" size="24" />
          </div>
        </div>
        <div class="stat-desc flex justify-center">Área Total (mt2)</div>
      </div>
    )
  }
  {
    datos.habitaciones && (
      <div class="stat px-2 py-4">
        <div class="flex justify-center items-center gap-2">
          <div class="stat-value text-white text-xl">{datos.habitaciones}</div>
          <div class="stat-figure text-secondary">
            <BedDouble color="red" size="24" />
          </div>
        </div>
        <div class="stat-desc flex justify-center">
          {datos.habitaciones > 1 ? "Habitaciones" : "Habitación"}
        </div>
      </div>
    )
  }
  {
    datos.banos && (
      <div class="stat px-2 py-4">
        <div class="flex justify-center items-center gap-2">
          <div class="stat-value text-white text-xl">{datos.banos}</div>
          <div class="stat-figure text-secondary">
            <Bath color="red" size="24" />
          </div>
        </div>
        <div class="stat-desc flex justify-center">
          {datos.banos > 1 ? "Baños" : "Baño"}
        </div>
      </div>
    )
  }
  {
    datos.estacionamiento && (
      <div class="stat px-2 py-4">
        <div class="flex justify-center items-center gap-2">
          <div class="stat-value text-white text-xl">
            {datos.estacionamiento}
          </div>
          <div class="stat-figure text-secondary">
            <Car color="red" size="28" />
          </div>
        </div>
        <div class="stat-desc flex justify-center items-end">
          Estacionamiento
        </div>
      </div>
    )
  }
  {
    datos.bodega && (
      <div class="stat px-2 py-4">
        <div class="flex justify-center items-center gap-2">
          <div class="stat-value text-white text-xl">{datos.bodega}</div>
          <div class="stat-figure text-secondary">
            <Archive color="red" size="24" />
          </div>
        </div>
        <div class="stat-desc flex justify-center">Bodega</div>
      </div>
    )
  }
</div>
<div class="lg:hidden">
  <ul class="list">
    {
      datos.areaTotal && (
        <li class="list-row pl-0">
          <div>
            <RulerDimensionLine color="red" size="24" />
          </div>
          <div>
            <div class="text-xs uppercase font-semibold opacity-60">
              Área Total
            </div>
            {datos.areaTotal} mt<sup>2</sup>
          </div>
        </li>
      )
    }
    {
      datos.habitaciones && (
        <li class="list-row pl-0">
          <div>
            <BedDouble color="red" size="24" />
          </div>
          <div>
            <div class="text-xs uppercase font-semibold opacity-60">
              Habitaciones
            </div>
            {datos.habitaciones}
          </div>
        </li>
      )
    }
    {
      datos.banos && (
        <li class="list-row pl-0">
          <div>
            <Bath color="red" size="24" />
          </div>
          <div>
            <div class="text-xs uppercase font-semibold opacity-60">Baños</div>
            {datos.banos}
          </div>
        </li>
      )
    }
    {
      datos.estacionamiento && (
        <li class="list-row pl-0">
          <div>
            <Car color="red" size="24" />
          </div>
          <div>
            <div class="text-xs uppercase font-semibold opacity-60">
              Estacionamientos
            </div>
            {datos.estacionamiento}
          </div>
        </li>
      )
    }
    {
      datos.bodega && (
        <li class="list-row pl-0">
          <div>
            <Archive color="red" size="24" />
          </div>
          <div>
            <div class="text-xs uppercase font-semibold opacity-60">Bodega</div>
            {datos.bodega}
          </div>
        </li>
      )
    }
  </ul>
</div>
