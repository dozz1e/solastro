---
const { incluye, espacios } = Astro.props;
---

<div class="mb-2">
  <div class="grid grid-cols-2 gap-2">
    {
      incluye && (
        <div class="card card-xl shadow-sm bg-white mt-2 md:mt-0 p-6">
          <h3 class="text-3xl text-red-600 mb-2">Incluye</h3>
          <ul class="list">
            {incluye.map((incl) => (
              <li class="list-row pl-0">{incl}</li>
            ))}
          </ul>
        </div>
      )
    }
    {
      espacios && (
        <div class="card card-xl shadow-sm bg-white mt-2 md:mt-0 p-6">
          <h3 class="text-3xl text-red-600 mb-2">Espacios Comunes</h3>
          <ul class="list">
            {espacios.map((espa) => (
              <li class="list-row pl-0">{espa}</li>
            ))}
          </ul>
        </div>
      )
    }
  </div>
</div>
