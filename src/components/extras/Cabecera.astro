---
const { title, pagina } = Astro.props;
---

<div
  class="hero h-60"
  style={`background: url(https://marsolpropiedades.cl/images/varios/${pagina}@1x.webp) no-repeat;`}
>
  <div class="hero-overlay"></div>
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold text-white flex items-center">
        {title}
        <img
          src="/favicon.svg"
          alt="Logo Marsol Propiedades"
          class="w-16 ml-2"
        />
      </h1>
    </div>
  </div>
</div>

<style>
  .hero {
    background-size: cover !important;
    background-position: center center !important;
  }
</style>
